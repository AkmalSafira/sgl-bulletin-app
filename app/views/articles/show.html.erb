<h2 align="center">Title: <%= @article.title %></h2>
  <div class="well col-xs-8 col-xs-offset-2">
    <% if @article.user %>
      <ul class="listing">
        <div class="row center">
          <div class="col-md-4 col-md-offset-4">
          <li>Created by:</li>
          <li><%= link_to gravatar_for(@article.user), user_path(@article.user) %></li>
          <li class="article-title">
            <%= link_to @article.user.username, user_path(@article.user) %>
          </li>
          <li><small>
            <%= pluralize(@article.user.articles.count, "article") if @article.user.articles %>
          </small></li>
          </div>
        </div>
      </ul>
    <% end %>
  <h4 class="center description"><strong>Description:</strong></h4>
  <hr>
  <%= simple_format(@article.description) %>
    <div class="article-actions">
      <%= link_to "Edit this bulletin", edit_article_path(@article), class: "btn btn-xs btn-primary" %>
      <%= link_to "Delete this bulletin", article_path(@article), method: :delete,
      data: { confirm: "Are you sure you want to delete the bulletin?"},
      class: "btn btn-xs btn-danger" %>
      <%= link_to "View all bulletins", articles_path, class: "btn btn-xs btn-success" %>
    </div>
    <br>
    <br>
  <h4 class="center description"><strong>Comments:</strong></h4>
  <hr>
  <% @article.comments.recent.map do |comment| %>
    <%= comment.comment%>
    <%= comment.created_at.strftime("%B %d, %Y - %H:%M") %>
    <div class="comment-actions">
      <%= link_to "Edit this comment", edit_comment_path(comment.id, article_id: @article.id), class: "btn btn-xs btn-primary" %>
      <%= link_to "Delete this comment", comment_path(comment.id, article_id: @article.id), method: :delete, 
      data: { confirm: "Are you sure you want to delete the comment?"}, class: "btn btn-xs btn-danger" %>
      <br>
      <br>
    </div>
  <% end %>
  <br>
  <%= link_to "Post a new comment for this article", new_comment_path(article_id: @article.id), class: "btn btn-xs btn-primary" %>
  
  </div>

