<h1>Post a comment</h1>

<% if @comment.errors.any? %>
<h2>Your comment can't be posted because</h2>
<ul>
  <% @comment.errors.full_messages.each do |msg| %>
  <li><%= msg %></li>
  <% end %>
</ul>
<% end %>

<%= form_for @comment do |f| %>
    <%= f.hidden_field :article_id %><br/>
  <p>
    <%= f.label :content %><br/>
    <%= f.text_area :content %>
  </p>
  
  <p>
    <%= f.submit  %>
  </p>
<% end%>




