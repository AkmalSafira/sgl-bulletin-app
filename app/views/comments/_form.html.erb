<%= render 'shared/errors', obj: @comment %>

<div class = 'row'>
  <div class = 'col-xs-12'>
    <%= form_for(@comment, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <%= f.hidden_field :article_id %><br/>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :content %>
        </div>
        <div class="col-sm-8">
          <%= f.text_area :comment, rows: 10, class: "form-control", placeholder: "Post your comment here" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit "Post Comment", class: 'btn btn-primary btn-lg' %>
        </div>
      </div>
    <% end %>
    
    <div class="col-xs-4 col-xs-offset-4">
      [ <%= link_to "Cancel request and return to bulletin listing", articles_path %> ]
    </div>
  </div>
</div>